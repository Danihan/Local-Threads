<div id="home">
  <header class="navbar">
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark ">
        <h2><a class="navbar-brand" href="#">Local Threads</a><i class="fa fa-search"></i></h2>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse " id="navbarCollapse">
            <ul class="navbar-nav ml-auto justify-content-end">
                <li class="nav-item ml-5">
                     <button id = "signout" class="nav-link"> Signout</button>
                </li>
            </ul>
        </div>
    </nav>
  </header>
  <div class="container">
    <div class = "jumbotron">
          <h1 align = center>{{msg}}</h1>
          {{!-- <h2>Do you know your Neighbors!</h2> --}}
        </div>
    <div class="row">
      <div class="col-12">
        {{!-- <button id = "signout"> Signout</button> --}}
        
        

        <div class="card">
          <div class="card-body">
            <form class="clearfix mb-4" action="POST" enctype="multipart/form-data">
              <div class="form-group">
                <label for="thread-text">Post</label>
                <input type="text" id="thread-text" class="form-control" aria-describedby="thread-text" placeholder="Title">
              </div>
              <div class="form-group">
                <label for="thread-description">Description</label>
                <textarea class="form-control" id="thread-description" aria-describedby="thread-description" placeholder="Text (Optional)"></textarea>
              </div>
              <div class="form-group">
                <label for="thread-image">Image</label>
                <input accept="image/*" type="file" name="image" class="form-control" id="thread-image" aria-describedby="thread-image" />
              </div>
              <button id="submit" class="btn btn-primary float-right">Post</button>
            </form>
          </div>
        </div>
        <div class="card">
          <div class="card-body">
            <h3>Posts:</h3>
            <ul id="thread-list" class="list-group">
              {{#each threads}}
                <li data-id="{{this.id}}" class="list-group-item">
                  <a href="thread/{{this.id}}">{{this.text}}</a>
                  <br>
                  {{#if this.imageFileName}}
                    <img class="img-fluid" src="/images/uploads/{{this.imageFileName}}" />
                  {{/if}}
                  <p class = "newDescription">{{this.description}}</p>
                  <hr>
                  <button class="btn btn-danger float-right delete">ï½˜</button>
                  <button class="btn btn-primary float-right edit">Edit</button>
                  <button class="fa fa-thumbs-up float-right like">Like</button>
                  <span class="float-right mr-5 disabled font-italic" id="count">Total Likes: {{this.likes}}</span>
                </li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
