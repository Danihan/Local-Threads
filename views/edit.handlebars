{{#if thread}}
<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header"><strong>Edit Post</strong></div>
          <div class="card-body">
            <form class="clearfix mb-4" method="POST">
              <div class="form-group">
                <label for="thread-text">Post</label>
                <input type="text" id="thread-text" class="form-control" aria-describedby="thread-text" value="{{thread.text}}">    
              </div>
              <div class="form-group">
                <label for="thread-description">Description</label>
                <textarea class="form-control" id="thread-description" aria-describedby="thread-description"
                  placeholder="Text (Optional)">{{thread.description}}</textarea>
              </div>
              <div class="form-group">
                <label for="thread-image">Image</label>
                <input accept="image/*" type="file" name="image" class="form-control-file" id="thread-image" aria-describedby="thread-image" />
              </div>
              <input type="hidden" id="thread-id" value="{{thread.id}}" />
              <button id="submit" class="btn btn-primary btn-block">Post</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Error</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                "You must enter a thread text and description!"
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<!-- modal done -->

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/edit.js"></script>
{{else}}
<h1>Thread not found</h1>
{{/if}}