{{#if thread}}
<div id="home">
  <header class="navbar">
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark ">
        <h2><a class="navbar-brand" href="#">Local Threads</a><i class="fa fa-search"></i></h2>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse " id="navbarCollapse">
            <ul class="navbar-nav ml-auto justify-content-end">
                <li class="nav-item ml-5">
                     <button class = "homepage" class="nav-link"> Home </button>
                </li>
            </ul>
        </div>
    </nav>
  </header>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h2>Edit Post</h2>

        {{!-- <button id = "homepage"> ‚Üê Back To Home </button> --}}
        <div class="card">
          <div class="card-body">
            <form class="clearfix mb-4" method="POST">
              <div class="form-group">
                <label for="thread-text">Post</label>
                <input type="text" id="thread-text" class="form-control" aria-describedby="thread-text" value="{{thread.text}}">
              </div>
              <div class="form-group">
                <label for="thread-description">Description</label>
                <textarea class="form-control" id="thread-description" aria-describedby="thread-description"
                  placeholder="Text (Optional)">{{thread.description}}</textarea>
              </div>
              <div class="form-group">
                <label for="thread-image">Image</label>
                <input accept="image/*" type="file" name="image" class="form-control" id="thread-image" aria-describedby="thread-image" />
              </div>
              <input type="hidden" id="thread-id" value="{{thread.id}}" />
              <button id="submit" class="btn btn-primary float-right">Post</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/edit.js"></script>
{{else}}
<h1>Thread not found</h1>
{{/if}}