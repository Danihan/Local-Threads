{{#if thread}}
<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <div class="card">
          <div class="card-header"><strong>Edit Post</strong></div>

          <div class="card-body">
            <form class="clearfix mb-4" method="POST">
              <div class="form-group">
                <label for="thread-text">Post</label>
                <input type="text" id="thread-text" class="form-control" aria-describedby="thread-text" value="{{thread.text}}">
              </div>
              <div class="form-group">
                <label for="thread-description">Description</label>
                <textarea class="form-control" id="thread-description" aria-describedby="thread-description"
                  placeholder="Text (Optional)">{{thread.description}}</textarea>
              </div>
              <div class="form-group">
                <label for="thread-image">Image</label>
                <input accept="image/*" type="file" name="image" class="form-control-file" id="thread-image" aria-describedby="thread-image" />
              </div>
              <input type="hidden" id="thread-id" value="{{thread.id}}" />
              <button id="submit" class="btn btn-primary btn-block">Post</button>
            </form>

            <button id="homepage" class="btn btn-block">‚Üê Back To Home </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/edit.js"></script>
{{else}}
<h1>Thread not found</h1>
{{/if}}