<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header"><strong>Thread</strong></div>
        <div class="card-body">
          <p><strong>Text</strong>: {{thread.text}}</p>
          {{#if thread.imageFileName}}
          <img class="img-fluid" src="/images/uploads/{{thread.imageFileName}}" />
          {{/if}}
          <p>
            <strong>Description:</strong> {{thread.description}}</p>
          <div class="form-group">
            <label for="comment-description"><strong>Add Comment</strong></label>
            <textarea class="form-control" id="comment-description" aria-describedby="comment-description" placeholder="Text (Optional)"></textarea>
          </div>
            <button id="commentSubmit" class="btn btn-primary btn-block" data-id="{{thread.id}}">Comment</button>
        </div>
        <div id ="comments" class="card">
          <div class="card-header"><strong>Comments</strong></div>
            <div class="card-body">
              {{#each thread.Comments}}
                <li data-id="{{this.id}}" class="list-group-item">
                  <p>{{this.description}}</p>
                </li>
              {{/each}}
            </ul>
          </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>